{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/esnext.iterator.constructor.js\";\nimport \"core-js/modules/esnext.iterator.filter.js\";\nimport \"core-js/modules/esnext.iterator.find.js\";\nimport 'bootstrap';\nimport productos from './assets/js/productosTemporada.json';\nimport $ from 'jquery';\nexport default {\n  name: 'App',\n  data() {\n    return {\n      currentRoute: 'index',\n      productos: productos,\n      // Importando productos del json\n      selectedCategory: 'Todos',\n      cart: [] // Categoría seleccionada por defecto\n    };\n  },\n  computed: {\n    // Filtrar los productos por categoría seleccionada\n    filteredProductos() {\n      if (this.selectedCategory === 'Todos') {\n        return this.productos;\n      }\n      return this.productos.filter(producto => producto.categoria && producto.categoria.toLowerCase() === this.selectedCategory.toLowerCase());\n    }\n  },\n  methods: {\n    changeRoute(route) {\n      if (this.currentRoute === route) return;\n      this.currentRoute = route;\n\n      // Cambiar el título de la página\n      document.title = route === 'index' ? 'Inicio' : route === 'catalogo' ? 'Catálogo de Productos' : 'Carrito de Compras';\n\n      // Manejo del slider solo si es 'index'\n      if (route === 'index') {\n        this.$nextTick(() => {\n          this.initializeSlider();\n        });\n      } else {\n        this.destroySlider();\n      }\n    },\n    openModal() {\n      this.$nextTick(() => {\n        const modal = new window.bootstrap.Modal(document.getElementById('beneficiosModal'));\n        modal.show();\n      });\n    },\n    // Método para obtener la URL de la imagen\n    getImageUrl(imagePath) {\n      return require(`@/assets/img/${imagePath}`);\n    },\n    // Cambia la categoría seleccionada\n    filterCategory(category) {\n      this.selectedCategory = category;\n    },\n    addToCart(product) {\n      // Verifica si el producto ya está en el carrito\n      const existingProduct = this.cart.find(item => item.nombre === product.nombre);\n      if (existingProduct) {\n        // Si ya existe, solo se incrementa la cantidad\n        existingProduct.quantity += 1;\n      } else {\n        // Si no existe, se añade con cantidad 1\n        this.cart.push({\n          ...product,\n          quantity: 1\n        });\n      }\n    },\n    // Método para inicializar el slick slider\n    initializeSlider() {\n      const slider = $(this.$el).find('.slider');\n      if (slider.hasClass('slick-initialized')) {\n        slider.slick('unslick');\n      }\n      slider.slick({\n        speed: 10000,\n        autoplay: false,\n        autoplaySpeed: 0,\n        cssEase: 'linear',\n        slidesToShow: 5,\n        slidesToScroll: 1,\n        infinite: true,\n        swipeToSlide: true,\n        centerMode: true,\n        focusOnSelect: true,\n        dots: false,\n        arrows: false\n      });\n    },\n    // Método para destruir el slick slider\n    destroySlider() {\n      const slider = $(this.$el).find('.slider');\n      if (slider.hasClass('slick-initialized')) {\n        slider.slick('unslick');\n      }\n    }\n  },\n  mounted() {\n    // Se inicia el slider al cargar la página\n    document.title = 'Inicio';\n    this.initializeSlider();\n  },\n  beforeUnmount() {\n    // Destruye el slider antes de desmontar el componente\n    this.destroySlider();\n  }\n};","map":{"version":3,"names":["productos","$","name","data","currentRoute","selectedCategory","cart","computed","filteredProductos","filter","producto","categoria","toLowerCase","methods","changeRoute","route","document","title","$nextTick","initializeSlider","destroySlider","openModal","modal","window","bootstrap","Modal","getElementById","show","getImageUrl","imagePath","require","filterCategory","category","addToCart","product","existingProduct","find","item","nombre","quantity","push","slider","$el","hasClass","slick","speed","autoplay","autoplaySpeed","cssEase","slidesToShow","slidesToScroll","infinite","swipeToSlide","centerMode","focusOnSelect","dots","arrows","mounted","beforeUnmount"],"sources":["C:\\xampp\\htdocs\\prueba-feat\\src\\App.vue"],"sourcesContent":["<template>\n  <div class=\"__body\">\n\n    <div class=\"__header\">\n      <div class=\"container-in\">\n        <nav>\n          <button \n            @click=\"changeRoute('index')\" \n            :class=\"{ white: currentRoute === 'catalogo' || currentRoute === 'carrito' }\">\n            Inicio\n          </button>\n          <button \n            @click=\"changeRoute('catalogo')\" \n            :class=\"{ white: currentRoute === 'catalogo' || currentRoute === 'carrito' }\">\n            Tienda\n          </button>\n          <button \n            @click=\"changeRoute('carrito')\" \n            :class=\"{ white: currentRoute === 'catalogo' || currentRoute === 'carrito' }\">\n            Carrito\n          </button>\n        </nav>\n      </div>\n    </div>\n    \n\n    <div v-if=\"currentRoute === 'index'\" class=\"__home\">\n      <div class=\"__cover\">\n        <div class=\"__backCover\">\n          <img :src=\"require('@/assets/img/_backCover.png')\"/>\n        </div>\n        <div class=\"__coverImg\">\n          <img :src=\"require('@/assets/img/__coverDesktop.png')\" class=\"desktop\"/>\n          <img :src=\"require('@/assets/img/__coverResponsive.png')\" class=\"responsive\"/>\n        </div>\n      </div>\n      <div class=\"__productosTemp\">\n        <div class=\"container-in\">\n          <div class=\"__productosTempTitle\">\n            <img :src=\"require('@/assets/img/__titleProductosDeTemporada.png')\"/>\n          </div>\n        </div>\n        <div class=\"__sliderContent\">  \n          <div class=\"slider\">\n            <div v-for=\"producto in productos.slice(0, 10)\" :key=\"producto.nombre\" class=\"producto\">\n              <img :src=\"getImageUrl(producto.imagen)\" alt=\"Producto\" />\n              <h3>{{ producto.nombre }}</h3>\n              <p>GTQ.{{ producto.precio }}</p>\n              <button @click=\"addToCart(producto)\">Agregar a carrito</button>\n            </div>\n          </div>\n          <div class=\"__ctaProductos\">\n            <button @click=\"changeRoute('catalogo')\">ver todos los productos</button>\n          </div>\n        </div>\n      </div>\n      <div class=\"__ctaSuscription\">\n        <div class=\"__ctaSuscriptionImg\">\n          <img :src=\"require('@/assets/img/__freshAndHot.png')\"/>\n        </div>\n        <div class=\"__suscriptionContent\">\n          <div class=\"container-in\">\n            <div class=\"__suscriptionContentBody\">\n              <div class=\"row __centerVertical\">\n                <div class=\"col-md-6\">\n                </div>\n                <div class=\"col-md-6\">\n                  <div class=\"__titleCta\">\n                    <h1>¡Suscríbete y <span>disfruta</span> del pan más fresco cada semana!</h1>\n                  </div>\n                  <div class=\"__contentCta\">\n                    <p>Convierte tus mañanas en momentos especiales con nuestro pan artesanal recién horneado. Suscríbete a nuestras entregas semanales y déjanos llevarte el sabor de la panadería a la puerta de tu hogar. ¡Fácil, delicioso y siempre a tiempo!</p>\n                  </div>\n                  <div class=\"__btnsCTA\">\n                    <div class=\"__suscribe\">\n                      <div class=\"__ctaProductos\">\n                        <button>suscribirme</button>\n                      </div>\n                      <div class=\"__ctaBeneficios\">\n                        <button @click=\"openModal\">beneficios</button>\n                      </div>\n                    </div>\n                  </div>\n                </div>\n              </div>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n\n\n\n    <div v-if=\"currentRoute === 'catalogo'\">\n      <div class=\"__coverProductos\">\n        <div class=\"__backCoverProductos\">\n          <img :src=\"require('@/assets/img/__coverCart.png')\"/>\n        </div>\n        <div class=\"__titleCover\">\n          <img :src=\"require('@/assets/img/__titleProductosDeLaPanaderia.png')\"/>\n        </div>\n      </div>\n      <div class=\"__productosCatalogo\">\n        <div class=\"container-in\">\n          <div class=\"__categorias\">\n            <nav>\n              <button \n                :class=\"{ active: selectedCategory === 'Todos' }\" \n                @click=\"filterCategory('Todos')\">Todos</button>\n              <button \n                :class=\"{ active: selectedCategory === 'Pan' }\" \n                @click=\"filterCategory('Pan')\">Pan</button>\n              <button \n                :class=\"{ active: selectedCategory === 'Galletas' }\" \n                @click=\"filterCategory('Galletas')\">Galletas</button>\n              <button \n                :class=\"{ active: selectedCategory === 'Pasteleria' }\" \n                @click=\"filterCategory('Pasteleria')\">Pastelería</button>\n            </nav>\n          </div>\n          <div class=\"__productList\">\n            <div class=\"row\">\n              <div v-for=\"producto in filteredProductos\" :key=\"producto.nombre\" class=\"col-md-3\">\n                <div class=\"producto\">\n                  <img :src=\"getImageUrl(producto.imagen)\" alt=\"Producto\" />\n                  <h3>{{ producto.nombre }}</h3>\n                  <p>GTQ.{{ producto.precio }}</p>\n                  <button @click=\"addToCart(producto)\">Agregar a carrito</button>\n                </div>\n              </div>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n\n\n\n    <div v-if=\"currentRoute === 'carrito'\">\n      <div class=\"__coverProductos\">\n        <div class=\"__backCoverProductos\">\n          <img :src=\"require('@/assets/img/__coverCart.png')\" />\n        </div>\n        <div class=\"__titleCover\">\n          <img :src=\"require('@/assets/img/__titleProductosDeMiCarrito.png')\" />\n        </div>\n      </div>\n      <div class=\"__productosCatalogo\">\n        <div class=\"container-in\">\n          <div class=\"__titleCarrito\">\n            <h1>Carrito de <span>compras</span></h1>\n          </div>\n          <div class=\"__carritoContent\">\n            <div class=\"row __centerVertical\">\n              <div class=\"col-md-8\">\n                <div class=\"__tableCarrito\">\n                  <table class=\"table\">\n                    <thead>\n                      <tr>\n                        <th scope=\"col\">Producto</th>\n                        <th scope=\"col\">Cantidad</th>\n                        <th scope=\"col\">Precio</th>\n                        <th scope=\"col\">Acciones</th>\n                      </tr>\n                    </thead>\n                    <tbody class=\"__productCartContent\">\n                      <tr v-for=\"(item, index) in cartItems\" :key=\"index\">\n                        <td class=\"__productInfoTable\">\n                          <img :src=\"getImageUrl(item.producto.imagen)\" alt=\"Producto\" />\n                          <p>{{ item.producto.nombre }}</p>\n                        </td>\n                        <td class=\"__qty\">\n                          <input type=\"number\" v-model=\"item.cantidad\" min=\"1\" />\n                        </td>\n                        <td class=\"__price\">GTQ.{{ item.producto.precio * item.cantidad }}</td>\n                        <td class=\"__delete\">\n                          <button @click=\"removeFromCart(index)\">x</button>\n                        </td>\n                      </tr>\n                    </tbody>\n                  </table>\n                  <div class=\"__ctaProductos __proceed\">\n                    <button>Actualizar carrito</button>\n                  </div>\n                  <div class=\"__emptyCart\" v-if=\"cartItems.length === 0\">\n                    <h1>Actualmente tu carrito está vacío, añade productos para proceder con la compra.</h1>\n                  </div>\n                </div>\n              </div>\n              <div class=\"col-md-4\">\n                <div class=\"__resumeCarrito\">\n                  <h1>Resumen</h1>\n                  <div class=\"__resumeBody\">\n                    <div class=\"__resumeContent\">\n                      <h2>Subtotal</h2>\n                      <h1>GTQ. {{ subtotal }}</h1>\n                    </div>\n                    <div class=\"__resumeContent\">\n                      <h3>Delivery</h3>\n                      <h1>GTQ. 00.00</h1>\n                    </div>\n                    <div class=\"__resumeContent total\">\n                      <h3>Total</h3>\n                      <h1>GTQ. {{ total }}</h1>\n                    </div>\n                  </div>\n                  <div class=\"__terms\">\n                    <img :src=\"require('@/assets/img/__iconTerms.png')\" />\n                    <p>Al finalizar la compra aceptas los <span>términos y condiciones</span></p>\n                  </div>\n                  <div class=\"__ctaProductos __proceed\">\n                    <button disabled>Proceder con la compra</button>\n                  </div>\n                </div>\n              </div>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n\n    \n    <div class=\"__footer\">\n      <div class=\"container-in\">\n        <div class=\"__logoFooter\">\n          <img :src=\"require('@/assets/img/__logoFooter.png')\"/>\n        </div>\n        <div class=\"__textFooter\">\n          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>\n        </div>\n        <div class=\"__social\">\n          <a href=\"#\">\n            <img :src=\"require('@/assets/img/__fb.png')\"/>\n          </a>\n          <a href=\"#\">\n            <img :src=\"require('@/assets/img/__ig.png')\"/>\n          </a>\n        </div>\n      </div>\n    </div>\n    \n        <!-- Modal -->\n    <div class=\"modal fade\" id=\"beneficiosModal\" tabindex=\"-1\" aria-labelledby=\"beneficiosModalLabel\" aria-hidden=\"true\">\n      <div class=\"modal-dialog modal-dialog-centered\">\n        <div class=\"modal-content\">\n          <div class=\"modal-header\">\n            <h5 class=\"modal-title\" id=\"beneficiosModalLabel\">Beneficios</h5>\n          </div>\n          <div class=\"modal-body\">\n            <ul>\n              <li>Ahorra un 10% en cada pedido semanal al formar parte de nuestro plan de suscripción.</li>\n              <li>Recibe tu pan favorito en la puerta de tu casa sin preocuparte por hacer pedidos cada semana.</li>\n              <li>Te llevamos pan recién horneado, elaborado con ingredientes frescos y mucho amor.</li>\n              <li>Elige los tipos de pan que más te gustan y ajusta tus entregas según tus necesidades.</li>\n              <li>Cancela o ajusta tu suscripción en cualquier momento, sin penalizaciones ni complicaciones.</li>\n            </ul>\n          </div>\n          <div class=\"modal-footer\">\n            <div class=\"__ctaProductos\">\n              <button type=\"button\" data-bs-dismiss=\"modal\">suscribirme</button>\n            </div>\n            <div class=\"__ctaBeneficios\">\n              <button type=\"button\" data-bs-dismiss=\"modal\">cerrar</button>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n\n\n  </div>\n\n</template>\n<script>\nimport 'bootstrap';\nimport productos from './assets/js/productosTemporada.json';\nimport $ from 'jquery';\n\nexport default {\n  name: 'App',\n  data() {\n    return {\n      currentRoute: 'index',\n      productos: productos, // Importando productos del json\n      selectedCategory: 'Todos',\n      cart: [], // Categoría seleccionada por defecto\n    };\n  },\n  computed: {\n    // Filtrar los productos por categoría seleccionada\n    filteredProductos() {\n      if (this.selectedCategory === 'Todos') {\n        return this.productos;\n      }\n      return this.productos.filter(producto => \n        producto.categoria && producto.categoria.toLowerCase() === this.selectedCategory.toLowerCase()\n      );\n    },\n  },\n  methods: {\n    changeRoute(route) {\n      if (this.currentRoute === route) return;\n\n      this.currentRoute = route;\n\n      // Cambiar el título de la página\n      document.title =\n        route === 'index'\n          ? 'Inicio'\n          : route === 'catalogo'\n            ? 'Catálogo de Productos'\n            : 'Carrito de Compras';\n\n      // Manejo del slider solo si es 'index'\n      if (route === 'index') {\n        this.$nextTick(() => {\n          this.initializeSlider();\n        });\n      } else {\n        this.destroySlider();\n      }\n    },\n    openModal() {\n      this.$nextTick(() => {\n        const modal = new window.bootstrap.Modal(document.getElementById('beneficiosModal'));\n        modal.show();\n      });\n    },\n    // Método para obtener la URL de la imagen\n    getImageUrl(imagePath) {\n      return require(`@/assets/img/${imagePath}`);\n    },\n    // Cambia la categoría seleccionada\n    filterCategory(category) {\n      this.selectedCategory = category;\n    },\n    addToCart(product) {\n      // Verifica si el producto ya está en el carrito\n      const existingProduct = this.cart.find(item => item.nombre === product.nombre);\n      if (existingProduct) {\n        // Si ya existe, solo se incrementa la cantidad\n        existingProduct.quantity += 1;\n      } else {\n        // Si no existe, se añade con cantidad 1\n        this.cart.push({\n          ...product,\n          quantity: 1\n        });\n      }\n    },\n    // Método para inicializar el slick slider\n    initializeSlider() {\n      const slider = $(this.$el).find('.slider');\n\n      if (slider.hasClass('slick-initialized')) {\n        slider.slick('unslick');\n      }\n\n      slider.slick({\n        speed: 10000,\n        autoplay: false,\n        autoplaySpeed: 0,\n        cssEase: 'linear',\n        slidesToShow: 5,\n        slidesToScroll: 1,\n        infinite: true,\n        swipeToSlide: true,\n        centerMode: true,\n        focusOnSelect: true,\n        dots: false,\n        arrows: false,\n      });\n    },\n    // Método para destruir el slick slider\n    destroySlider() {\n      const slider = $(this.$el).find('.slider');\n      if (slider.hasClass('slick-initialized')) {\n        slider.slick('unslick');\n      }\n    },\n  },\n  mounted() {\n    // Se inicia el slider al cargar la página\n    document.title = 'Inicio';\n    this.initializeSlider();\n  },\n  beforeUnmount() {\n    // Destruye el slider antes de desmontar el componente\n    this.destroySlider();\n  },\n};\n</script>\n\n\n"],"mappings":";;;;AAkRA,OAAO,WAAW;AAClB,OAAOA,SAAQ,MAAO,qCAAqC;AAC3D,OAAOC,CAAA,MAAO,QAAQ;AAEtB,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,YAAY,EAAE,OAAO;MACrBJ,SAAS,EAAEA,SAAS;MAAE;MACtBK,gBAAgB,EAAE,OAAO;MACzBC,IAAI,EAAE,EAAE,CAAE;IACZ,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACR;IACAC,iBAAiBA,CAAA,EAAG;MAClB,IAAI,IAAI,CAACH,gBAAe,KAAM,OAAO,EAAE;QACrC,OAAO,IAAI,CAACL,SAAS;MACvB;MACA,OAAO,IAAI,CAACA,SAAS,CAACS,MAAM,CAACC,QAAO,IAClCA,QAAQ,CAACC,SAAQ,IAAKD,QAAQ,CAACC,SAAS,CAACC,WAAW,CAAC,MAAM,IAAI,CAACP,gBAAgB,CAACO,WAAW,CAAC,CAC/F,CAAC;IACH;EACF,CAAC;EACDC,OAAO,EAAE;IACPC,WAAWA,CAACC,KAAK,EAAE;MACjB,IAAI,IAAI,CAACX,YAAW,KAAMW,KAAK,EAAE;MAEjC,IAAI,CAACX,YAAW,GAAIW,KAAK;;MAEzB;MACAC,QAAQ,CAACC,KAAI,GACXF,KAAI,KAAM,OAAM,GACZ,QAAO,GACPA,KAAI,KAAM,UAAS,GACjB,uBAAsB,GACtB,oBAAoB;;MAE5B;MACA,IAAIA,KAAI,KAAM,OAAO,EAAE;QACrB,IAAI,CAACG,SAAS,CAAC,MAAM;UACnB,IAAI,CAACC,gBAAgB,CAAC,CAAC;QACzB,CAAC,CAAC;MACJ,OAAO;QACL,IAAI,CAACC,aAAa,CAAC,CAAC;MACtB;IACF,CAAC;IACDC,SAASA,CAAA,EAAG;MACV,IAAI,CAACH,SAAS,CAAC,MAAM;QACnB,MAAMI,KAAI,GAAI,IAAIC,MAAM,CAACC,SAAS,CAACC,KAAK,CAACT,QAAQ,CAACU,cAAc,CAAC,iBAAiB,CAAC,CAAC;QACpFJ,KAAK,CAACK,IAAI,C